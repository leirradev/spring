<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans default-init-method="init" default-destroy-method="myDestroy">
	<bean id="triangle" class="com.morningstar.lifecyclecallbacks.Triangle" autowire="byName">
	</bean>
	
	<bean id="pointA" class="com.morningstar.lifecyclecallbacks.Point">
		<property name="x" value="0"></property>
		<property name="y" value="0"></property>
	</bean>
	
	<bean id="pointB" class="com.morningstar.lifecyclecallbacks.Point">
		<property name="x" value="-20"></property>
		<property name="y" value="0"></property>
	</bean>
	
	<bean id="pointC" class="com.morningstar.lifecyclecallbacks.Point">
		<property name="x" value="20"></property>
		<property name="y" value="0"></property>
	</bean>
</beans>
